{
  "name": "banka_app_server",
  "version": "1.0.0",
  "description": "Server for the Banka App",
  "main": "index.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-summary mocha --require @babel/register --exit",
    "test:watch": "mocha -w test/",
    "dev": "cross-env NODE_ENV=development nodemon index.js --exec babel-node",
    "start": "babel-node index.js",
    "lint": "eslint --fix",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "author": "Chukwualuka Chiama",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "faker": "^4.1.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0"
  },
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.1.0",
    "pg": "^7.9.0"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*.json"
    ]
  }
}
